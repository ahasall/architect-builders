{
  "$schema": "http://json-schema.org/schema#",
  "title": "Schematic Target",
  "description": "Schematic target options for Build Facade.",
  "type": "object",
  "properties": {
    "assets": {
      "type": "array",
      "description": "List of static assets.",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "tsConfig": {
      "type": "string"
    },
    "watch": {
      "type": "boolean",
      "default": false
    }
  },
  "additionalProperties": false,
  "required": ["tsConfig"]
}
